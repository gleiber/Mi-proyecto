<div class="border-form-div">
  <h2 class="titulo">Sign up</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address',:style => "color: #333; margin-left:10%;" %>
    <%= f.password_field :password, :placeholder => 'Password',:style => "color: #333; margin-left:10%;" %>
    <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation',:style => "color: #333; margin-left:10%;" %>
    <%= f.submit "Sign up",:class=>'btn btn-primary',:style => " margin-left:10%;" %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
