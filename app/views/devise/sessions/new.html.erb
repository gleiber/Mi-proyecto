<div class="border-form-div">
  <h2 class="titulo">Sign in</h2>
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address', :style => "color: #333; margin-left:10%;" %>
    <%= f.password_field :password, :placeholder => 'Password',:style => "color: #333; margin-left:10%;"%>
    <% if devise_mapping.rememberable? -%>
      <label class="checkbox"> <%= f.label :remember_me %> </label>
    <% end -%>
    <%= f.submit "Sign in",:class=>'btn btn-primary',:style => " margin-left:10%;" %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
